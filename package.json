{
  "name": "mire-desk",
  "private": true,
  "version": "1.0.118",
  "description": "Miré-Desk Remote Control Solution",
  "author": "Mauro Garcia",
  "main": "dist-electron/main.js",
  "scripts": {
    "dev": "vite --host",
    "build": "tsc -b && vite build",
    "lint": "eslint .",
    "preview": "vite preview",
    "server:peer": "peerjs --port 9000 --path /peerjs --allow_discovery true",
    "dist": "npm run build && electron-builder",
    "test": "vitest",
    "postinstall": "npx @electron/rebuild -v 28.2.0 -f -m . -w @jitsi/robotjs"
  },
  "dependencies": {
    "@jitsi/robotjs": "^0.6.21",
    "axios": "^1.13.3",
    "lucide-react": "^0.562.0",
    "nan": "^2.25.0",
    "peerjs": "^1.5.5",
    "react": "^19.2.0",
    "react-dom": "^19.2.0"
  },
  "overrides": {
    "nan": "^2.25.0"
  },
  "devDependencies": {
    "@electron/rebuild": "^4.0.3",
    "@eslint/js": "^9.39.1",
    "@testing-library/dom": "^10.4.1",
    "@testing-library/jest-dom": "^6.9.1",
    "@testing-library/react": "^16.3.2",
    "@types/node": "^24.10.1",
    "@types/react": "^19.2.5",
    "@types/react-dom": "^19.2.3",
    "@vitejs/plugin-react": "^5.1.1",
    "concurrently": "^8.2.2",
    "electron": "^28.2.0",
    "electron-builder": "^24.13.3",
    "eslint": "^9.39.1",
    "eslint-plugin-react-hooks": "^7.0.1",
    "eslint-plugin-react-refresh": "^0.4.24",
    "globals": "^16.5.0",
    "jsdom": "^27.4.0",
    "node-abi": "^4.26.0",
    "peer": "^1.0.2",
    "typescript": "~5.9.3",
    "typescript-eslint": "^8.46.4",
    "vite": "^7.2.4",
    "vite-plugin-electron": "^0.29.0",
    "vite-plugin-electron-renderer": "^0.14.6",
    "vitest": "^4.0.17",
    "wait-on": "^7.2.0"
  },
  "build": {
    "appId": "com.clone.anydesk",
    "productName": "Miré-Desk",
    "asar": true,
    "asarUnpack": [
      "**/*.node"
    ],
    "compression": "maximum",
    "removePackageScripts": true,
    "directories": {
      "output": "dist-package"
    },
    "files": [
      "dist/**/*",
      "dist-electron/**/*",
      "package.json",
      "!**/*.{md,map}"
    ],
    "extraResources": [
      {
        "from": "public/icon.png",
        "to": "icon.png"
      }
    ],
    "win": {
      "icon": "public/icon.png",
      "target": [
        "nsis",
        "portable"
      ]
    },
    "nsis": {
      "oneClick": false,
      "perMachine": true,
      "allowToChangeInstallationDirectory": true,
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true,
      "runAfterFinish": true,
      "shortcutName": "Miré-Desk",
      "uninstallDisplayName": "Miré-Desk (Desinstalar)",
      "artifactName": "MireDesk-Setup-${version}.${ext}",
      "installerHeaderIcon": "public/icon.png"
    },
    "npmRebuild": true
  }
}
